.layout-fieldwork
	.container
		.col1
			.content

				| {% for post in site.posts %}
				| {% if post.categories contains 'blog' %}

				.fcard

					// BANNER
					a(href="{{post.url}}")
						img(src="/assets/imgs/blog/{{post.banner}}")

					.fcard-blurb
						// TITLE
						span
							a(href="{{post.url}}")
								h2 {{post.headline}}
							h4 {{post.date | date: "%b %d %Y"}} - {{post.location}}

						// CONTENT
						p {{post.excerpt | remove_first: '&lt;!--more--&gt;' }}

						a(href="{{post.url}}")
							.textlink Read the full post here

				hr

				| {% endif %}
				| {% endfor %}
