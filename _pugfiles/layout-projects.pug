.project-content
	.project-title
		h1
			span {{ page.title }}
		| {% if page.tagline %}
		p.tagline {{ page.tagline }}
		| {% endif %}
		| {% if page.date %}
		h6 {% assign d = page.date | date: "%-d" %}{% case d %}{% when "1" or "21" or "31" %}{{ d }}st{% when "2" or "22" %}{{ d }}nd{% when "3" or "23" %}{{ d }}rd{% else %}{{ d }}th{% endcase %}{{page.date | date: ' %b %Y'}}
		| {% endif %}
	| {{content}}
