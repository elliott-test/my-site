.project-content
	
	.project-title
		h1 {{ page.title }}
			
		| {% if page.tagline %}
		p.tagline {{ page.tagline }}
		| {% endif %}
		
		span
			h6
				| {% if page.date %}
				| {% assign d = page.date | date: "%-d" %}{% case d %}{% when "1" or "21" or "31" %}{{ d }}st{% when "2" or "22" %}{{ d }}nd{% when "3" or "23" %}{{ d }}rd{% else %}{{ d }}th{% endcase %}{{page.date | date: ' %b %Y'}} |
				| {% endif %}
				| {{ page.hanger }}
		
	| {{content}}
