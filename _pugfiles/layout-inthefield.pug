.layout-inthefield
	.container
		.col1
			.content

				| {% for post in site.posts %}

				img(src="/assets/imgs/{{post.banner}}")
				span
					h4 {{post.title}}
					p {{post.date | date: "%b %m %Y"}}
				p {{post.content}}
				a(href="{{post.url}}")
					.textlink Read the full post here
				hr

				| {% endfor %}
