.layout-inthefield
	.container
		.col1
			.content

				| {% for post in site.posts %}
				| {% if post.categories contains 'blog' %}

				.fcard

					// BANNER
					img(src="/assets/imgs/blog/{{post.banner}}")

					// TITLE
					span
						h2 {{post.headline}}
						h4 {{post.date | date: "%b %d %Y"}} - {{post.location}}

					// CONTENT
					p {{post.content}}
					a(href="{{post.url}}")
						.textlink Read the full post here

				hr

				| {% endif %}
				| {% endfor %}
